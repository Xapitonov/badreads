<!--        android:contentDescription="Add book from OpenLibrary"-->
<!--        android:layout_marginEnd="40dp"-->
<!--        android:layout_marginBottom="70dp"-->
<!--        />-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>

